{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": [
    "/node_modules"
  ]
}
